{
  "version": "3.1.1",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "changelog": {
    "repo": "trustio",
    "cacheDir": ".changelog"
  },
  "command": {
    "publish": {
      "allowBranch": [
        "main",
        "next",
        "master",
        "default"
      ],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): %s [skip ci]"
    }
  },
  "useWorkspaces": true
}
